//Game.js
function Game() {
    var canvas=document.getElementById("myCanvas");
    var ctx=canvas.getContext('2d');
    ctx.fillStyle="#000056";
    ctx.fillRect(0,0,100,100)
    f();
}
function f() {
    alert("x");
}



